<div class="aside-wrap">

    <% if (typeof top === 'object' && top.length) { %>

    <div class="aside-block">
        <div class="aside-title">
            Топ
        </div>

        <% [top.shift()].forEach(function (movie) { %>

        <div id="now-playing" class="slider slider-main">
            <a href="<%- movie.url %>" class="playing-poster "><img src="<%- movie.poster %>" alt="Смотреть онлайн <%- movie.title %>"></a>
        </div>

        <% }); %>

    </div>
    <div class="now-playing-list main-page">

        <% top.forEach(function (movie) { %>

        <div class="list-item">
            <a href="<%- movie.url %>" class="name-movie">
