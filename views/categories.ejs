<!doctype html>
<html lang="<%- page.language %>">
<head>

    <%- include('includes/head.ejs'); -%>

</head>
<body>

<div class="page-wrapper">

    <header id="header">

        <%- include('includes/header.ejs'); -%>

    </header>

    <%- include('includes/header2.ejs'); -%>

    <div id="main" class="cat">

        <div class="container-main">

            <aside id="aside">

                <%- include('includes/left.ejs'); -%>

            </aside>

            <div class="content">

                <div id="breadcrumb">
                    <a href="/">
                        <%- page.l.home %>
                    </a>
                    <span class="separetor">/</span>
                    <span class="active"><%= page.title %></span>
                </div>

                <div class="head-title">

                    <h1 class="subtitle"><%- page.h1 %></h1>

                </div>

                <div class="line-block">
                    <div class="cinemapress-content-main">

                        <% if (typeof categories === 'object' && categories.length) { %>
                            <div style="clear: both"></div>
                            <% categories.forEach(function (content) { %>
                                <div style="float:left;width:50%;">
                                    <div style="margin:10px;padding:0;position:relative">
                                        <div class="cinemapress-categories" style="background-image:url('<%- content.image %>');"></div>
                                        <a href="<%- content.url %>" class="cinemapress-categories-title"><%= content.title %></a>
                                    </div>
                                </div>
                            <% }); %>
                            <div style="clear: both"></div>
                        <% } %>

                    </div>
                </div>
            </div>

        </div>

        <% if (typeof page.adv === 'object' && page.adv.bottom) { %>
            <div class="container user-playlists-slider main-playlist" style="padding: 10px;">
                <div class="viewport" style="text-align: center;">
                    <%- page.adv.bottom %>
                </div>
            </div>
        <% } %>

        <% if (page.seo) { %>

            <div class="container user-playlists-slider main-playlist container-seo">
                <div class="head-title">
                    <div class="subtitle"><%= page.title %></div>
                </div>
                <div class="viewport">
                    <%- page.seo %>
                </div>
            </div>

        <% } %>

        <div class="container user-playlists-slider main-playlist recentlyViewedBlock" style="display: none;">
            <div class="viewport">
                <div><%- page.l.watched %>:</div>
                <div id="recentlyViewed"></div>
            </div>
        </div>

        <div class="page-buffer"></div>

        <div class="page-footer clearfix">
            <footer id="footer">

                <%- include('includes/footer.ejs'); -%>

            </footer>
        </div>

    </div>

</div>

</body>
</html>